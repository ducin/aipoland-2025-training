# LLM Engine Selection
ENGINE=GEMINI  # or LLAMA_CPP, ANTHROPIC, OPENAI

# Gemini Configuration (if ENGINE=GEMINI)
GEMINI_API_KEY=your_api_key_here
GEMINI_MODEL_NAME=gemini-2.5-flash

# Anthropic Configuration (if ENGINE=ANTHROPIC)
ANTHROPIC_API_KEY=your_api_key_here
ANTHROPIC_MODEL_NAME=claude-3-5-haiku-latest

# OpenAI Configuration (if ENGINE=OPENAI)
OPENAI_API_KEY=your_api_key_here
OPENAI_MODEL_NAME=gpt-4-turbo

# LLaMA Configuration (if ENGINE=LLAMA_CPP)
LLAMA_MODEL_PATH=/path/to/model.gguf
LLAMA_GPU_LAYERS=1
LLAMA_CONTEXT_SIZE=2048

# Legacy: MODEL_NAME is still supported as fallback for all engines
# MODEL_NAME=your_model_name
